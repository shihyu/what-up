<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@drawable/choose_login_or_register_bg"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:src="@drawable/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_view_left_right_margin"
        android:layout_marginRight="@dimen/common_view_left_right_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp">

    <Button
        style="@style/CommonBtn"
        android:text="@string/register_btn_text"
        android:layout_marginBottom="10dp"
        android:background="@drawable/common_orange_btn_bg_selector"
        android:id="@+id/choose_view_register_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textColor="@color/white"
        android:textSize="@dimen/font_base"
        android:layout_below="@+id/choose_view_register_btn"
        android:layout_alignLeft="@+id/choose_view_register_btn"
        android:id="@+id/choose_view_forget_password_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/font_base"
        android:layout_below="@+id/choose_view_register_btn"
        android:layout_alignRight="@+id/choose_view_register_btn"
        android:id="@+id/choose_view_loign_text_view"/>

    </RelativeLayout>
</RelativeLayout>
