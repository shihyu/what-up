<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/tip_load_data_fail"
        android:textColor="@color/white"
        android:textSize="@dimen/font_base"/>

    <Button
        android:id="@+id/reload_data_btn"
        android:layout_width="@dimen/reload_btn_width"
        android:layout_height="@dimen/reload_btn_height"
        android:background="@drawable/common_transparent_white_btn_bg"
        android:text="@string/reload_data"
        android:textColor="@color/white"
        android:textSize="@dimen/font_plus_1"/>

</LinearLayout>

