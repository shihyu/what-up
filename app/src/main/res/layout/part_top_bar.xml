<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/top_bar"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/common_circle_btn_size"
        android:layout_height="@dimen/common_circle_btn_size"
        android:layout_marginLeft="@dimen/common_circle_btn_margin"
        android:layout_marginTop="@dimen/common_circle_btn_margin"
        android:src="@drawable/top_bar_back_btn_bg"
        android:id="@+id/top_bar_left_image_view"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="@dimen/font_plus_3"
        android:textColor="@color/white"
        android:id="@+id/top_bar_title"
        android:paddingTop="22dp"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="@dimen/common_circle_btn_size"
        android:layout_height="@dimen/common_circle_btn_size"
        android:layout_marginRight="@dimen/common_circle_btn_margin"
        android:layout_marginTop="@dimen/common_circle_btn_margin"
        android:visibility="invisible"
        android:id="@+id/top_bar_right_image_view"/>
</LinearLayout>
