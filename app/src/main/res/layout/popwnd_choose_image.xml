<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="?android:listDivider"
        android:showDividers="middle"
        android:background="@drawable/popwnd_item_bg">
        <Button
            android:id="@+id/choose_image_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize="18sp"
            android:textColor="@drawable/popwnd_text_color"
            android:text="拍照"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999999"/>

        <Button
            android:id="@+id/choose_image_album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:textColor="@drawable/popwnd_text_color"
            android:textSize="18sp"
            android:text="从本地文件选择"/>
        </LinearLayout>

    <Button
        android:id="@+id/choose_image_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@drawable/popwnd_text_color"
        android:background="@drawable/popwnd_item_bg"
        android:textSize="18sp"
        android:text="取消"/>

</LinearLayout>