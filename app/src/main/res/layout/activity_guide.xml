<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/guide_view_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        app:fillColor="@color/orange_dark"
        app:pageColor="@color/white"
        app:radius="@dimen/indicator_radius"
        app:strokeWidth="@dimen/indicator_stroke_width"
        app:strokeColor="@color/indicator_stroke_color"/>
</FrameLayout>
